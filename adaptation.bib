@article{piskackova2021,
  title = {Windows of Action for Controlling Palmer Amaranth ({{Amaranthus}} Palmeri) Using Emergence and Phenology Models},
  author = {Piskackova, Theresa A. Reinhardt and Reberg-Horton, Samuel Chris and Richardson, Robert J. and Jennings, Katie M. and Franca, Lucas and Young, Bryan G. and Leon, Ramon G.},
