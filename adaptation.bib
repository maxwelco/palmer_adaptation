@article{perez-llorca2019,
  title = {Sexual Dimorphism in Response to Herbivory and Competition in the Dioecious Herb {{Spinacia}} Oleracea},
  author = {Pérez-Llorca, Marina and Sánchez Vilas, Julia},
  date = {2019-01-01},
  journaltitle = {Plant Ecology},
  shortjournal = {Plant Ecol},
