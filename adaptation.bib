@article{barrett2013,
  title = {Sexual Dimorphism in Flowering Plants},
  author = {Barrett, Spencer C.H. and Hough, Josh},
  date = {2013-01-01},
  journaltitle = {Journal of Experimental Botany},
  shortjournal = {Journal of Experimental Botany},
  volume = {64},
  number = {1},
